rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Stock prices data - read for authenticated users, write only via server
    match /stock_prices_by_date/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side writes via admin SDK
    }
    
    // User profiles - users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User portfolios - users can read/write their own portfolio
    match /portfolios/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Portfolio holdings subcollection
      match /holdings/{holdingId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Transaction history subcollection
      match /transactions/{transactionId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
